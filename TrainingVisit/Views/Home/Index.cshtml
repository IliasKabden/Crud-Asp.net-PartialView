@{
    ViewBag.Title = "Home Page";
}
<div class="container">
    @*<h2>Training</h2>*@
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();">Add New </button><br /><br />
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Descriptions
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody class="tbody" id="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Add Training</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="idTraining">ID</label>
                        <input type="text" class="form-control" id="idTraining" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="NameTraining">Name</label>
                        <input type="text" class="form-control" id="NameTraining" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label for="DescrTraining">Descriptions</label>
                        <input type="text" class="form-control" id="DescrTraining" placeholder="Descr" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return AddTrainig();">Add</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="UserForTrainig" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                Name
                            </th>
                            <th>
                                Surname
                            </th>
                            <th>
                                birthdate
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="tbody" id="tbodyUser"></tbody>
                    <tbody class="tbody" id="GetLatestTrainings"></tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>